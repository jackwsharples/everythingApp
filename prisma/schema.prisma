// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"   // use default output (no custom path)
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ItemType {
  EVENT      // calendar
  IDEA       // idea board
  WORKOUT    // workout tracker
  CALORIE    // calorie log
  NOTE       // misc
}

model Item {
  id        String   @id @default(cuid())
  type      ItemType
  title     String
  data      Json     // flexible payload per type
  tags      String[] // e.g. ["bike","school","code"]
  when      DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
